{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  packageRules: [
    {
      description: [
        'Artifactory Group',
      ],
      groupName: 'Artifactory',
      matchPackageNames: [
        '/artifactory/',
      ],
      matchDatasources: [
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      "prTitle": "chore(deps): update devcontainer dependencies",
      "commitMessageTopic": "devcontainer dependencies",
      groupName: 'devcontainer',
      matchFileNames: [
        '.devcontainer/Dockerfile',
        '**/pyproject.toml',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
    },
    {
      description: [
        'Actions Runner Controller Group',
      ],
      groupName: 'Actions Runner Controller',
      matchPackageNames: [
        '/gha-runner-scale-set-controller/',
        '/gha-runner-scale-set/',
      ],
      matchDatasources: [
        'docker',
        'helm',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      description: [
        'Flux Operator Group',
      ],
      groupName: 'Flux Operator',
      matchDatasources: [
        'docker',
        'github-releases',
      ],
      matchPackageNames: [
        '/flux-operator/',
        '/flux-instance/',
        '/flux-operator-manifests/',
        '/flux2/',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 3,
    },
    {
      description: [
        'Keycloak Group',
      ],
      groupName: 'Keycloak',
      matchPackagePatterns: [
        'd4rkfella/keycloak',
        'keycloak/keycloak-k8s-resources',
      ],
      matchDatasources: [
        'github-tags',
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      description: [
        'OpenEBS Group',
      ],
      groupName: 'OpenEBS',
      matchFileNames: [
        'kubernetes/apps/openebs-system/zfs-localpv/manifests/helmrelease.yaml',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 1,
    },
    {
      description: "Kubernetes Group",
      groupName: "kubernetes",
      matchDatasources: ["docker"],
      matchPackageNames: [
        "/kube-apiserver/",
        "/kube-controller-manager/",
        "/kube-scheduler/",
        "/kubelet$/"
      ],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 4,
    },
    {
      description: "Talos Group",
      groupName: "Talos",
      matchDatasources: ["docker"],
      matchPackageNames: ["/installer-secureboot/", "/talosctl/", "/installer/"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 3,
    },
    {
      description: "Barman Cloud Group",
      group: "Barman Cloud",
      matchDatasources: ["docker"],
      matchPackagePatterns: ["/plugin-barman-cloud/", "plugin-barman-cloud-sidecar"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
  ],
}
