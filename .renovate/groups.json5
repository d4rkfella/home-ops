{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  packageRules: [
    {
      description: [
        'Actions Runner Controller Group',
      ],
      groupName: 'Actions Runner Controller',
      matchPackageNames: [
        '/gha-runner-scale-set-controller/',
        '/gha-runner-scale-set/',
      ],
      matchDatasources: [
        'docker',
        'helm',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      description: [
        'Flux Operator Group',
      ],
      groupName: 'Flux Operator',
      matchDatasources: [
        'docker',
        'github-releases',
      ],
      matchPackageNames: [
        '/flux-operator/',
        '/flux-instance/',
        '/flux-operator-manifests/',
        '/flux2/',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 3,
    },
    {
      description: [
        'Keycloak Group',
      ],
      groupName: 'Keycloak',
      matchPackagePatterns: [
        'd4rkfella/keycloak',
        'keycloak/keycloak-k8s-resources',
      ],
      matchDatasources: [
        'github-tags',
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      description: [
        'OpenEBS Group',
      ],
      groupName: 'OpenEBS',
      matchPackagePatterns: [
        '/zfs-localpv/',
        'sig-storage/csi-node-driver-registrar',
        'sig-storage/csi-resizer',
        'sig-storage/csi-snapshotter',
        'sig-storage/snapshot-controller',
        'sig-storage/csi-provisioner',
        'kubernetes-csi/external-snapshotter',
      ],
      matchDatasources: [
        'github-tags',
        'docker',
      ],
      group: {
        commitMessageTopic: '{{{groupName}}} group',
      },
      minimumGroupSize: 2,
    },
    {
      description: "Kubernetes Group",
      groupName: "kubernetes",
      matchDatasources: ["docker"],
      matchPackageNames: [
        "/kube-apiserver/",
        "/kube-controller-manager/",
        "/kube-scheduler/",
        "/kubelet$/"
      ],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 4,
    },
    {
      description: "Talos Group",
      groupName: "talos",
      matchDatasources: ["docker"],
      matchPackageNames: ["/installer-secureboot/", "/talosctl/", "/installer/"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
    {
      description: "Barman Cloud Plugin",
      group: "Barman Cloud",
      matchDatasources: ["docker", "github-releases"],
      matchPackageNames: ["/plugin-barman-cloud/"],
      group: {
        commitMessageTopic: "{{{groupName}}} group",
      },
      minimumGroupSize: 2,
    },
  ],
}
